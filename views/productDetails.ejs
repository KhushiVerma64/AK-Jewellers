<%- include('partials/header') %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= product.image %>" class="img-fluid rounded shadow" alt="<%= product.name %>">
    </div>

    <div class="col-md-6">
      <h2><%= product.name %></h2>
      <p class="text-muted">₹<%= product.price %></p>
      <p><%= product.description %></p>

      <a href="/gallery" class="btn btn-secondary mt-3">← Back to Gallery</a>
      <a href="https://wa.me/9198510506?text=I'm%20interested%20in%20<%= encodeURIComponent(product.name) %>" target="_blank" class="btn btn-success mt-3 ms-2">
        WhatsApp to Buy
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
