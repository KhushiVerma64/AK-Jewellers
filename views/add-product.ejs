<%- include('partials/header') %>

  <div class="row mt-3">
    <h2 class="col-6 offset-3">Add New Product</h2>
    <div class="col-6 offset-3 mt-3">
      <form action="/products/add" method="POST" enctype="multipart/form-data" novalidate class="needs-validation">

        <div class="mb-3">
          <label>Name:</label>
          <input type="text" name="name" class="form-control" required><br>
        </div>

        <div class="mb-3">
          <label>Price:</label>
          <input type="number" name="price" class="form-control" required><br>
        </div>

        <div class="mb-3">
          <label>Product Image:</label>
          <input type="file" name="image" class="form-control" accept="image/*" required>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="category" id="category" class="form-control" required>
            <option value="">Select Category</option>
            <option value="ring">Ring</option>
            <option value="bangles">Bangles</option>
            <option value="necklace">Necklace</option>
            <option value="bracelet">Bracelet</option>
            <option value="chain">Chain</option>
            <option value="tika">Tika</option>
            <option value="pandent">Pandent</option>
            <option value="earing">Earing</option>
            <option value="nosepin">Nosepin</option>
            <option value="payal">Payal</option>
          </select>
        </div>


        <div class="mb-3">
          <label>Description:</label>
          <textarea name="description" class="form-control" required></textarea><br>
        </div>

        <button type="submit" class="btn btn-success">Add Product</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>