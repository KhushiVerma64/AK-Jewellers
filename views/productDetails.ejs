<%- include('partials/header') %>

  <div class="container my-5">
    <div class="row">
      <div class="col-md-6">
        <img id="zoomImage" src="<%= product.image %>" class="img-fluid rounded shadow" alt="<%= product.name %>" style="cursor: zoom-in;">
      </div>

      <div class="col-md-6">
        <h2>
          <%= product.name %>
        </h2>
        <p class="text-muted">
          <%= product.price %>
        </p>
        <p>
          <%= product.description %>
        </p>
        <!-- <p>अधिक जानकारी के लिए WhatsApp पर संपर्क करें:</p> -->
        <p style="color: green;">अधिक जानकारी के लिए <b>WhatsApp</b> पर संपर्क करें:</p>


        <a href="/gallery" class="btn btn-secondary mt-3">← Back to Gallery</a>
        <a href="https://wa.me/9198510506?text=I'm%20interested%20in%20<%= encodeURIComponent(product.name) %>"
          target="_blank" class="btn btn-success mt-3 ms-2">
          WhatsApp to Buy
        </a>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/medium-zoom@1.0.6/dist/medium-zoom.min.js"></script>
<script>
  mediumZoom('#zoomImage', {
    margin: 24,
    background: '#000'
  });
</script>

  <%- include('partials/footer') %>